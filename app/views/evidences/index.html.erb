<h1>Evidences</h1>


<%= link_to 'New Evidence', new_evidence_path, class: 'btn btn-lg btn-outline-warning ' %>
<div class="row">
  <% @evidences.each do |evidence| %>
      <div class="col-sm-6 col-md-4 col-lg-3 mt-4" id="evidence-parent-<%=evidence.id%>">
        <%= render 'static_pages/card', evidence: evidence %>
      </div>
  <% end %>
</div>

