
<div class="row">
  <div class="col-md-2">
    <div class="card">

      <div class="card-body">

        <h3>Summary</h3>
        <% competency_review_helper.each do |key, value| %>
            <span><%= key %></span>
            <div class="progress">
              <div class="progress-bar progress-bar-striped bg-warning" role="progressbar" style="width: <%=value*25%>%" aria-valuenow="<%=value%>" aria-valuemin="0" aria-valuemax="4"></div>
            </div>
        <% end %>


      </div>
    </div>
  </div>

  <div class="col-md-10">
    <div class="row">
      <div class="card">
        <div class="card-body">

          <h3 style="display: inline;">Filter: </h3>
          <div class="btn-group" data-toggle="buttons">
            <label onclick="myFunction(this)" class="btn btn-secondary active">None
              <input type="radio" name="options" id="option0" autocomplete="off" checked>
            </label>
            <% competency_list_helper.each_with_index do |filter_button, index| %>
                <label onclick="myFunction(this)" class="btn btn-outline-secondary"><%=filter_button%>
                  <input type="radio" name="options" id="option<%=index+1%>" autocomplete="off" checked>
                </label>
            <% end %>
          </div>
        </div>
      </div>
      <div class="card">
        <div class="card-body">
          <%= link_to 'Add Evidence', new_evidence_path, class: 'btn btn-lg btn-warning ' %>
        </div>
      </div>
    </div>
    <div class="row" id="my-competencies">
      <% @evidences.each do |evidence| %>
          <div class="col-sm-6 col-md-4 col-lg-3 mt-4 evidence-card" id="evidence-parent-<%=evidence.id%>" data-groups='["<%=evidence.competency%>"]'>
            <%= render 'evidences/card', evidence: evidence %>
          </div>
      <% end %>
    </div>
  </div>
</div>




