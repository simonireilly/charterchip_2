$( "#evidence-parent-<%= @evidence.id %>" ).toggleClass( 'col-sm-6 col-md-4 col-lg-3 mt-4');
$( "#evidence-parent-<%= @evidence.id %>" ).toggleClass( 'row');
$('#evidence-<%= @evidence.id %>').toggleClass('col-md-3');
if ($('#close-edit').length > 0){
    $('#close-edit').remove();
}else{
    $("<div class='col-md-9' id='close-edit'><%= escape_javascript render :partial => 'evidences/form', locals: {evidence: @evidence} %></div>").appendTo('#evidence-parent-<%= @evidence.id %>');
}


