<%= form_with(model: evidence, local: true) do |form| %>
  <% if evidence.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(evidence.errors.count, "error") %> prohibited this evidence from being saved:</h2>

      <ul>
      <% evidence.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <div class="row">
      <div class="col-md-3">
        <div class="form-group">
          <%= form.label :title %>
          <%= form.text_field :title, id: :evidence_title, class: 'form-control'  %>
        </div>
        <div class="form-group">
          <%= form.label :competency %>
          <%= form.text_field :competency, id: :evidence_competency, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :level %>
          <%= form.number_field :level, id: :evidence_level, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :summary %>
          <%= form.text_field :summary, id: :evidence_summary, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :start_date %>
          <%= form.date_select :start_date, id: :evidence_start_date, :order => [:month, :year] %>
        </div>

        <div class="form-group">
          <%= form.label :end_date %>
          <%= form.date_select :end_date, id: :evidence_end_date, :order => [:month, :year] %>
        </div>
        <div class="actions">
          <%= form.submit class: 'btn btn-primary' %>
        </div>
      </div>
      <div class="col-md-9">
        <div class="form-group">
          <%= form.label :report %>
          <%= form.cktext_area :report, id: :evidence_report %>
        </div>
      </div>
    </div>



<% end %>
